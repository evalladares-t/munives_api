script(src='/vendor/bootstrap/js/bootstrap.min.js')
script(type='text/javascript' src='https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js')
script(type='text/javascript' src='https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js')
each val in ['2020', '2019', '2018','2017','2016','2015','2014','2013']
  script.
    $(document).ready( function () {
    $('#table#{val}').DataTable({
    "language": {
