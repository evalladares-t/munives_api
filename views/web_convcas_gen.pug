.body
    .main(role='main')
        .text-center
            .container.py-2
                .row.mt-3
                    .col
                        .row
                            .col-lg-4
                                .tabs.tabs-vertical.tabs-right.tabs-navigation.tabs-navigation-simple
                                    ul.nav.nav-tabs.col-sm-3
                                        li.nav-item.active
                                            a.nav-link(href='#tabsconvcas2020' data-toggle='tab') Convocatoria CAS - 2020
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2019' data-toggle='tab') Convocatoria CAS - 2019
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2018' data-toggle='tab') Convocatoria CAS - 2018
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2017' data-toggle='tab') Convocatoria CAS - 2017
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2016' data-toggle='tab') Convocatoria CAS - 2016
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2015' data-toggle='tab') Convocatoria CAS - 2015
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2014' data-toggle='tab') Convocatoria CAS - 2014
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2013' data-toggle='tab') Convocatoria CAS - 2013
                                        li.nav-item
                                            a.nav-link(href='#tabsconvcas2012' data-toggle='tab') Convocatoria CAS - 2012
                            .col-lg-8
                                #tabsconvcas2020.tab-pane.tab-pane-navigation.active.mt-4
                                    .row
                                        h4(style='text-align:justify; margin-right:5%;') CONVOCATORIA CAS - 2020
                                    table(style='margin-top:5%;' id='table2020')                        
                                        thead
                                            tr
                                                th
                                                    | Nombre
                                                th
                                                    | Convocatoria
                                                th
                                                    | Fe de errata
                                                th
                                                    | Comunicado
                                                th
                                                    | Evaluaci√≥n curricular
                                                th
                                                    | Resultado
                                        tbody
                                            each registro in result
                                                if(registro.ano =='2020' && registro!=null)
                                                    tr
                                                        td #{registro.name}
                                                        if(registro.convocatoria!=null)
                                                            td(style='text-align:center;')
                                                                a(href='http://localhost:3000/api/v1.0/web/convcas/cas/render/'+registro.convocatoria, target='_blank')
                                                                    i.icon-doc.icons
                                                        else
                                                            td(style='text-align:center;') -
                                                        if(registro.tb_fe_errata.length!=0)
                                                            td(style='text-align:center;')
                                                                each fe_errata in registro.tb_fe_errata
                                                                    a(href='http://localhost:3000/api/v1.0/web/convcas/cas/render/'+fe_errata.recurso, target='_blank')
                                                                        i.icon-doc.icons
                                                        else
                                                            td(style='text-align:center;') -
                                                        if(registro.comunicado!=null)
                                                            td(style='text-align:center;')
                                                                a(href='http://localhost:3000/api/v1.0/web/convcas/cas/render/'+registro.comunicado, target='_blank')
                                                                    i.icon-doc.icons
                                                        else
                                                            td(style='text-align:center;') -
                                                        if(registro.eval_curricular!=null)
                                                            td(style='text-align:center;')
                                                                a(href='http://localhost:3000/api/v1.0/web/convcas/cas/render/'+registro.eval_curricular, target='_blank')
                                                                    i.icon-doc.icons
                                                        else
                                                            td(style='text-align:center;') -
                                                        if(registro.resultado!=null)
                                                            td(style='text-align:center;')
                                                                a(href='http://localhost:3000/api/v1.0/web/transparencia/docmun/render/'+registro.recurso, target='_blank')
                                                                    i.icon-doc.icons
                                                        else
                                                            td(style='text-align:center;') -
                                #tabsconvcas2017.tab-pane.tab-pane-navigation.active.mt-4
                                    .row
                                        h4(style='text-align:center; margin-right:5%;') CONVOCATORIA CAS - 2017                                            
                                    .col-lg-8(style='margin-left:18%; margin-top:4%;')
                                        include web_convcas_sbd
